# ====================================
# UENR CLINIC SYSTEM - ENVIRONMENT CONFIG
# ====================================

# ------------------------------
# DATABASE CONFIGURATION
# ------------------------------
DB_HOST=localhost
DB_PORT=3306
DB_NAME=uenr_clinic_db
DB_USER=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_PREFIX=

# ------------------------------
# APPLICATION SETTINGS
# ------------------------------
APP_NAME="UENR Clinic System"
APP_ENV=development  # [production|development|testing]
APP_DEBUG=true
APP_URL=http://localhost/uenr-clinic
APP_TIMEZONE=Africa/Accra
APP_LOCALE=en
APP_KEY=base64:your_random_32_character_string_here

# ------------------------------
# SESSION & SECURITY
# ------------------------------
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_SECURE_COOKIE=false
CSRF_PROTECTION=true

# ------------------------------
# MAIL CONFIGURATION
# ------------------------------
MAIL_MAILER=smtp
MAIL_HOST=mail.example.com
MAIL_PORT=587
MAIL_USERNAME=noreply@example.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="UENR Clinic"

# ------------------------------
# FILE STORAGE
# ------------------------------
FILESYSTEM_DISK=local
UPLOAD_MAX_SIZE=2048  # in KB
ALLOWED_FILE_TYPES=jpg,png,pdf,doc,docx

# ------------------------------
# LAB MODULE SPECIFIC
# ------------------------------
LAB_RESULT_EXPIRE_DAYS=30
LAB_REPORT_PREFIX=LAB-
BLOODBANK_REPORT_PREFIX=BB-

# ------------------------------
# DEVELOPMENT TOOLS
# ------------------------------
DEBUGBAR_ENABLED=true
LOG_LEVEL=debug
